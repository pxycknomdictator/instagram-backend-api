{
  "name": "instagram-api",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "description": "A scalable and secure Instagram-style API built with TypeScript, Express, and MongoDB.",
  "scripts": {
    "dev": "tsc --watch & node --watch --env-file=.env dist/main.js",
    "start": "node --env-file=.env dist/main.js",
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "eslint",
    "kill": "rm -rf dist",
    "docker:build": "sudo docker build -t instagram-api .",
    "docker:up": "sudo docker compose up -d",
    "docker:down": "sudo docker compose down"
  },
  "keywords": [
    "instagram",
    "api",
    "express",
    "mongodb"
  ],
  "author": {
    "name": "Noman",
    "email": "pxycknomdictator@gmail.com"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "argon2": "^0.43.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
