{
  "name": "instagram-api",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "description": "A scalable and secure Instagram-style API built with TypeScript, Express, and MongoDB.",
  "scripts": {
    "dev": "tsc --watch & node --watch --env-file=.env dist/main.js",
    "start": "node --env-file=.env dist/main.js",
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "eslint",
    "kill": "rm -rf dist",
    "docker:run": "node dist/main.js",
    "docker:up": "sudo docker compose up -d",
    "docker:down": "sudo docker compose down"
  },
  "keywords": [
    "instagram",
    "api",
    "express",
    "mongodb",
    "javascript",
    "typescript"
  ],
  "author": {
    "name": "Noman",
    "email": "pxycknomdictator@gmail.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/pxycknomdictator/instagram-backend-api.git"
  },
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "argon2": "^0.43.0",
    "cloudinary": "^2.6.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mjml": "^4.15.3",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "resend": "^4.5.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mjml": "^4.7.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "engines": {
    "node": ">=v22.14.0",
    "pnpm": "10.9.0"
  }
}
